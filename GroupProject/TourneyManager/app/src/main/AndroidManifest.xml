<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.tourneymanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playerlist.PlayerlistActivity"
            android:label="Manage Playerlist" />
        <activity
            android:name=".playerlist.PlayersInTournamentActivity"
            android:label="Manage Players" />
        <activity
            android:name=".playerlist.AddPlayerActivity"
            android:label="Add Player" />
        <activity
            android:name=".manager.ManagerDashboardActivity"
            android:label="@string/title_activity_manager_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".manager.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true" />
        <activity
            android:name=".playerlist.LeaderboardActivity"
            android:label="Leaderboard" />
        <activity
            android:name=".tournament.TournamentDetailsActivity"
            android:label="@string/title_activity_tournament_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tournament.CreateTournamentActivity"
            android:label="@string/title_activity_create_tournament"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MatchList"
            android:label="@string/title_activity_match_list" />
        <activity
            android:name=".MatchListPublicActivity"
            android:label="@string/title_activity_match_list" />
        <activity android:name=".tournament.TournamentHistoryActivity"></activity>
    </application>

</manifest>