<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalprofit"
        android:text="Total Profit:          $600"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_weight="0.07" />

    <TextView
        android:text="# of Tournaments:  14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numTourneys"
        android:layout_weight="0.07"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:text="Create Tournament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createTournamentBtn"
        android:layout_weight="0.05"
        android:textSize="24sp"
        android:onClick="createTournament"/>

    <Button
        android:text="Player Management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerMgmtBtn"
        android:layout_weight="0.07"
        android:textSize="24sp"
        android:onClick="layoutPlayer"/>

</LinearLayout>